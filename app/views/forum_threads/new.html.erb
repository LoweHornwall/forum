<h1>Create new thread</h1>

<%= form_for :forum_thread, url: forum_threads_path  do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description, :cols => "40", :rows => "10" %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>